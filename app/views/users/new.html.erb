<!-- app/views/users/new.html.erb -->

<div class="jumbotron text-left">
<h1>Sign up</h1><br>

<%= form_for @user, url: '/users' do |f| %>
  <ul>
    <li>Name: <%= f.text_field :name %></li><br>
    <li>Email: <%= f.text_field :email %></li><br>
    <li>Password: <%= f.password_field :password %></li><br>
    <li>Password Confirmation: <%= f.password_field :password_confirmation %></li><br>
  </ul><br>
  <%= f.submit "Submit" %>
<% end %>
</div>
